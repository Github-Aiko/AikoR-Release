[Unit]
Description=AikoR Service
After=network.target nss-lookup.target
Wants=network.target

[Service]
User=root
Group=root
Type=simple
LimitAS=infinity
LimitRSS=infinity
LimitCORE=infinity
LimitNOFILE=infinity
LimitNPROC=10000
LimitNOFILE=1000000
WorkingDirectory=/usr/local/AikoR/

[Install]
WantedBy=multi-user.target
